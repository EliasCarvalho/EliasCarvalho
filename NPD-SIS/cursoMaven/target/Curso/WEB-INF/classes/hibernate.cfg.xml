        <property name="hibernate.connection.provider_class">com.zaxxer.hikari.hibernate.HikariConnectionProvider</property>
        <property name="hibernate.hikari.dataSource.serverName">desenvol3.uem.br</property>
        <property name="hibernate.hikari.dataSource.portNumber">50000</property>
        <property name="hibernate.hikari.dataSource.databaseName">des_eq3</property>
        <property name="hibernate.hikari.dataSource.user">db2bnd</property>
        <property name="hibernate.hikari.dataSource.password">ibmdb2</property> 
   
        <property name="hibernate.hikari.dataSourceClassName">com.ibm.db2.jcc.DB2SimpleDataSource</property>

        <property name="hibernate.hikari.idleTimeout">60000</property>
        <property name="hibernate.hikari.maximumPoolSize">1</property>
        <property name="hibernate.hikari.dataSource.driverType">4</property>
      
        <property name="hibernate.hikari.autoCommit">false</property>
        <property name="hibernate.hikari.maxLifetime">900000</property>
        <property name="hibernate.hikari.minimumIdle">5</property>
        <property name="hibernate.hikari.leakDetectionThreshold">30000</property>
        <property name="com.zaxxer.hikari.level">FINEST</property>
        <property name="hibernate.connection.release_mode">ON_CLOSE</property>
        <property name="logging.level.com.zaxxer.hikari.HikariConfig">DEBUG</property>
                
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">false</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.query.factory_class">org.hibernate.hql.internal.ast.ASTQueryTranslatorFactory</property>
        <property name="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <property name="hibernate.dialect">org.hibernate.dialect.DB2Dialect </property>
    
        <!-- Lista das classes do Banco -->
    
        <mapping class="tde.curso.projeto.modelo.Inscricao"/>
        <mapping class="tde.curso.projeto.modelo.Pessoa"/>
        <mapping class="tde.curso.projeto.modelo.Curso"/>

    </session-factory>
</hibernate-configuration>
